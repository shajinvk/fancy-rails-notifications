<!DOCTYPE html>
<html>
<head>
  <title>Example</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag "jquery.min","jquery.fancy-notifications" %>
  <%= csrf_meta_tag %>

<script type="text/javascript" charset="utf-8">
	
	$(function(){
		$.FancyNotifications();
	});
</script>
</head>
<body>
	<% flash.each do |name, msg| %>
	    <%= content_tag :div, msg, :id => "flash_#{name}", :class=>"flash" %>
	  <% end %>

<%= yield %>

</body>
</html>
